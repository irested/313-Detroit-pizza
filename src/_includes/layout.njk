<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ description }}">
  <title>{{ title }}</title>
  <link rel="canonical" href="https://313pizza.fr{{ page.url | url | replace('.html', '') }}">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ description }}">
  <meta property="og:image" content="{{ image or '/img/la-chevre.png' }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://313pizza.fr{{ page.url | url | replace('.html', '') }}">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:description" content="{{ description }}">
  <meta name="twitter:image" content="{{ image or '/img/la-chevre.png' }}">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Black+Han+Sans&family=Bowlby+One&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="preconnect" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/tailwind.css">
  <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="preconnect" rel="stylesheet" />
  <link rel="icon" type="image/png" href="/img/favicon.ico">
  <script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FoodEstablishment",
  "name": "313 Pizza",
  "image": "https://313pizza.fr/img/logo_footer.svg",
  "logo": "https://313pizza.fr/img/logo_footer.svg",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "15 rue de Bettignies",
    "addressLocality": "Villers-sire-nicole",
    "postalCode": "59600",
    "addressCountry": "FR"
  }
  "description": "Food truck Detroit Style Pizza, présent sur Maubeuge et ses environs.",
  "telephone": "+33759585547",
  "email": "contact@313pizza.fr",
  "url": "https://313pizza.fr",
  "hasMenu": "https://313pizza.fr/menu/",
  "areaServed": [
    { "@type": "City", "name": "Maubeuge" },
    { "@type": "City", "name": "Villers-sire-nicole" },
    { "@type": "City", "name": "Elesmes" },
    { "@type": "City", "name": "Colleret" },
    { "@type": "City", "name": "Ferrière-la-Petite" },
    { "@type": "City", "name": "La Longueville" }
  ],
  "servesCuisine": "Pizza",
  "priceRange": "€€",
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": [
        "Monday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday"
      ],
      "opens": "17:45",
      "closes": "21:30"
    }
  ],
  "paymentAccepted": "Espèces, Carte bancaire",
  "sameAs": [
    "https://www.facebook.com/313pizza.fr/",
    "https://www.instagram.com/313pizza.fr/"
  ]
}
</script>
</head>
<body class="bg-bgColor">
   <script src="/js/main.js"></script>
  <div class="w-full bg-orange text-white text-center py-2 px-4 text-sm font-semibold">
    Commandez sur place ou sur notre site dédié&nbsp;: 
    <a href="https://dsp313.hiboutik.com/food/" class="underline hover:text-vertAccent" target="_blank" rel="noopener">Commander en ligne</a>
  </div>
  <header>
    {% include "components/navbar.njk" %}
  </header>

  <main class="max-w-screen-xl mx-auto">
    {{ content | safe }}
  </main>

  {% include "components/footer.njk" %}
</body>
</html>
